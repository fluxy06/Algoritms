const array = [4, 2, 2, 2, 16]
function checkArray(prompt) {
    locale = 0
    for (var i = 0; i < prompt.length; i++) {
         if (prompt[i] % 2 != 0) {
             locale += 1
         }
    }
    if (locale <= 0){
        console.log('Все так')
    }else {
        console.log('Ничего не так')
    }
}


checkArray(array)
